{
  "executionRoleArn": "$EXECUTION_ROLE_ARN",
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": { 
          "awslogs-group" : "$CLOUDWATCH_LOG_GROUP",
          "awslogs-region": "$AWS_REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "hostPort": 3000,
          "protocol": "tcp",
          "containerPort": 3000
        }
      ],
      "image": "$FIRSTRX_IMAGE_URI",
      "essential": true,
      "name": "firstrx"
    },
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": { 
          "awslogs-group" : "$CLOUDWATCH_LOG_GROUP",
          "awslogs-region": "$AWS_REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "hostPort": 4000,
          "protocol": "tcp",
          "containerPort": 4000
        }
      ],
      "image": "$PRESCRIPTIONS_IMAGE_URI",
      "essential": true,
      "name": "prescriptions"
    },
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": { 
          "awslogs-group" : "$CLOUDWATCH_LOG_GROUP",
          "awslogs-region": "$AWS_REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "portMappings": [
        {
          "hostPort": 5000,
          "protocol": "tcp",
          "containerPort": 5000
        }
      ],
      "image": "$LOCATION_IMAGE_URI",
      "essential": true,
      "name": "location"
    }
  ],
  "memory": "2048",
  "taskRoleArn": "$TASK_ROLE_ARN",
  "family": "$FAMILY",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "1024"
}